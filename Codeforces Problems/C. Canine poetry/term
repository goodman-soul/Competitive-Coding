#include<bits/stdc++.h>
using namespace std;
int main()
{
		int n;
		cin>>n;
		while(n--){
				string s;
				cin>>s;
				unordered_map<char,bool> st;
				for(auto it:s)st[it]=true; //characters present
				unordered_map<char,bool> another; //chars canbe added
				vector<char> charset;
				for(int i=0;i<26;i++){
						if(st.find('a'+i)==st.end()){
								another['a'+i]=true;
								charset.push_back('a'+i);
						}
				}
				int start=0;int cnt=0;
				string vis=s;
				//unordered_map<int,bool> visited;
				//vector<char> charset;
				for(int i=1;i<(int)s.size();i++){
						if(vis[i-1]==vis[i]){
								vis[i]=charset[start++];
								cnt++;
						}
				}
				vis=s;
				int ans=0;start=0;
				for(int i=(int)s.size()-2;i>=0;i--){
						if(vis[i+1]==vis[i]){
								vis[i]=charset[start++];
								ans++;
						}
				}
				cnt=min(cnt,ans);
				//testing
				cout<<s<<endl;
				cout<<cnt<<endl;
		}
}




